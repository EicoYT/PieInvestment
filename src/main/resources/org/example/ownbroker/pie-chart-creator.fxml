<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.pieinvestment.mainmenu.MainMenuMethods">

    <Label text="Pie Chart Creation" />

    <!-- Buttons to add and remove stocks -->
    <Button text="Add Stock"/>
    <Button text="Remove Stock"/>

    <!-- Container to hold dynamically added stocks -->
    <VBox fx:id="stockContainer" spacing="10"/>
</StackPane>
