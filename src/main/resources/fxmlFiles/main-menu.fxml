<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="PieInvestment.MainMenu.MainMenuMethods">

    <!-- VBox for the main menu content, placed in front of the chart -->
    <VBox alignment="CENTER" spacing="15.0">
        <!-- Padding to adjust the position -->
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="5.0"/>
        </padding>

        <!-- Welcome Label -->
        <Label fx:id="welcomeText" text="Welcome to Investment Pie Creator" style="-fx-font-size: 24px;">
            <VBox.margin>
                <Insets top="-10.0"/>
            </VBox.margin>
        </Label>

        <!-- Invest Button -->
        <Button text="Manage your saved Pies" onAction="#onProfileManagerClick" prefWidth="200.0" prefHeight="55.0">
            <VBox.margin>
                <Insets top="40.0"/>
            </VBox.margin>
        </Button>

        <!-- CFD Button -->
        <Button text="Create a new Pie" onAction="#onCreatePieChartClick" prefWidth="200.0" prefHeight="55.0">
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
        </Button>
    </VBox>
</StackPane>
